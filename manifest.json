{
  "manifest_version": 3,
  "name": "AutoThinkSuffix for GPT-5",
  "version": "1.0.0",
  "description": "Appends the selected suffix (e.g., ' think harder') to AI chat messages at send-time, once per message.",
  "action": {
    "default_title": "AutoThinkSuffix",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
